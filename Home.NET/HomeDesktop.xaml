<Window x:Class="Home.NET.HomeDesktop"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Home.NET"
        mc:Ignorable="d"
        Loaded="Window_Loaded"
        xmlns:Tiles="clr-namespace:Home.NET.Tiles;assembly=Home.NET.Tiles"
        Title="HomeDesktop" Height="450" Width="800">
    <Window.Background>
        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
            <GradientStop Color="#FF171717" Offset="1"/>
            <GradientStop Color="#33575757" Offset="0.008"/>
        </LinearGradientBrush>
    </Window.Background>
    <Grid x:Name="MainGrid">
        <Tiles:TilesPanel x:Name="TilesPanel" Margin="0,0,0,27"/>
        <RadioButton x:Name="btnMetro" Content="PanelStyle -&gt; Metro" HorizontalAlignment="Left" VerticalAlignment="Top" Foreground="White" Margin="8,398,0,0" IsChecked="True" Click="btnMetro_Click"/>
        <RadioButton Content="PanelStyle -&gt; Aero" HorizontalAlignment="Left" VerticalAlignment="Top" Foreground="White" Margin="150,398,0,0" Click="RadioButton_Click"/>
    </Grid>
</Window>
