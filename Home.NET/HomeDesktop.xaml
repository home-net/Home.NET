        mc:Ignorable="d"
        Loaded="Window_Loaded"
        xmlns:Tiles="clr-namespace:Home.NET.Tiles;assembly=Home.NET.Tiles"
        Title="HomeDesktop" Height="556" Width="904" WindowState="Maximized">
