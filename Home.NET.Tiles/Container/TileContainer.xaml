<UserControl x:Class="Home.NET.Tiles.TileContainer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Home.NET.Tiles"
             Loaded="UserControl_Loaded"
             mc:Ignorable="d" 
             d:DesignHeight="128" d:DesignWidth="256">
    <Grid>
        <Rectangle x:Name="DebugRect" Visibility="Visible" Stroke="Red"/>
        <ScrollViewer VerticalScrollBarVisibility="Disabled" HorizontalScrollBarVisibility="Disabled">
            <WrapPanel x:Name="ContainerPanel" Orientation="Vertical">
            
            </WrapPanel>
            </ScrollViewer>
        <TextBlock x:Name="tbDebugText" IsHitTestVisible="False" Text="Debug Text" Foreground="White"></TextBlock>
    </Grid>
</UserControl>
